<h1><%= @store.name %></h1>

<p><a href='/stores/<%= @store.id %>/edit'>Edit Store</a></p>

<h1>Locations:</h1>

<ul class="ui list">
<% @store.locations.each do |location| %>
  <li class="ui item"><%= location.address%>
    <ul><% location.products.each do |product| %>
    <li><%= product.name%></li>
    <% end %>
    </ul></li>
    <% end %>
</ul>

